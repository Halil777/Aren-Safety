PORT=4000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=safety_platform
# Optional: use a single connection string instead of discrete fields
# DATABASE_URL=postgresql://user:password@host:5432/database
# DB_URL=postgresql://user:password@host:5432/database
# Enable if your provider requires TLS (e.g. cloud PostgreSQL)
DB_SSL=false
# Set to false when the provider uses self-signed certificates
DB_SSL_REJECT_UNAUTHORIZED=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# SMTP (do NOT commit real secrets)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# Set to true when using port 465 or when your provider requires an SSL connection from the start
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=no-reply@example.com
# Comma-separated list of recipients for support messages
SUPPORT_TO=microsoft7779@gmail.com,info@arensafety.com
